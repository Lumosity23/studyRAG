# Configuration StudyRAG Backend

# Base de données (OBLIGATOIRE)
DATABASE_URL=postgresql://studyrag:studyrag@localhost:5432/studyrag

# Ollama (optionnel - pour LLM local)
OLLAMA_BASE_URL=http://localhost:11434
LLM_CHOICE=llama3.2

# OpenAI (optionnel - fallback)
OPENAI_API_KEY=sk-your-openai-key-here

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Configuration serveur
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Sécurité
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Stockage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50000000

# ChromaDB (alternative à PostgreSQL pour les vecteurs)
CHROMA_PERSIST_DIRECTORY=./chroma_db